generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//////////////////////////////////////
// ENUMS
//////////////////////////////////////

enum Role {
  SUPER_ADMIN
  INSTITUTION_ADMIN
  VERIFIER
  USER
}

enum DocumentStatus {
  UPLOADED
  UNDER_REVIEW
  APPROVED
  REJECTED
}

//////////////////////////////////////
// MODELS
//////////////////////////////////////

model Institution {
  id        String   @id @default(uuid())
  name      String   @unique

  users            User[]
  documents        Document[]
  verificationLogs VerificationLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  @@index([deletedAt])
}

//////////////////////////////////////

model User {
  id            String       @id @default(uuid())
  email         String       @unique
  password      String
  role          Role

  institutionId String?
  institution   Institution? @relation(fields: [institutionId], references: [id])

  documents         Document[]        @relation("UserDocuments")
  reviewedDocuments Document[]        @relation("ReviewedDocuments")
  verificationLogs  VerificationLog[]
  refreshTokens     RefreshToken[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  @@index([institutionId])
  @@index([role])
  @@index([deletedAt])
}

//////////////////////////////////////

model Document {
  id          String         @id @default(uuid())
  title       String
  description String?

  fileUrl  String
  fileHash String

  status DocumentStatus @default(UPLOADED)

  verificationId String @unique

  uploadedById  String
  institutionId String

  reviewedById String?
  reviewedAt   DateTime?

  uploadedBy  User        @relation("UserDocuments", fields: [uploadedById], references: [id])
  institution Institution @relation(fields: [institutionId], references: [id])
  reviewedBy  User?       @relation("ReviewedDocuments", fields: [reviewedById], references: [id])

  logs VerificationLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  @@index([institutionId])
  @@index([uploadedById])
  @@index([status])
  @@index([reviewedById])
  @@index([deletedAt])
}
//////////////////////////////////////

model VerificationLog {
  id             String         @id @default(uuid())
  documentId     String
  actionById     String
  institutionId  String

  previousStatus DocumentStatus
  newStatus      DocumentStatus

  remarks String?

  document    Document    @relation(fields: [documentId], references: [id])
  actionBy    User        @relation(fields: [actionById], references: [id])
  institution Institution @relation(fields: [institutionId], references: [id])

  createdAt DateTime @default(now())

  @@index([documentId])
  @@index([institutionId])
  @@index([actionById])
}

//////////////////////////////////////

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  revoked   Boolean  @default(false)

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}